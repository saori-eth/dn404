{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "outDir": "dist",
        "rootDir": "src",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": ["src"]
}
